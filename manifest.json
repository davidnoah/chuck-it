{
  "manifest_version": 2,
  "name": "ChuckIt",
  "version": "1.0",

  "description": "An extension that allows a user to temporarily change clicked element property to display: none",
  "browser_action": {
          "default_icon": "images/off.png",
          "default_title": "ChuckIt"
  },
  "icons": { "16": "images/off.png",
           "48": "images/bomb48.png",
          "128": "images/bomb128.png" },

  "author": "David Noah",
  "permissions": [
          "tabs",
          "activeTab"
  ],
  "background": {
    "scripts": ["js/events.js"]
  }
}
